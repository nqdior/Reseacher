<controls:MetroWindow x:Class="Reseacher.MainWindow"
					  x:Name="Window"
					  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://schemes.grabacr.net/winfx/2014/controls"
                      xmlns:local="clr-namespace:Reseacher"
                      xmlns:chrome="http://schemes.grabacr.net/winfx/2014/chrome"
                      xmlns:properties="clr-namespace:Reseacher.Properties"
                      Title="Reseacher"
					  Width="970"
					  Height="600"
                      Opacity="{Binding Path=Opacity, Source={x:Static properties:Settings.Default}}"
                      WindowStyle="None"
                      AllowsTransparency="True"
					  FontFamily="Segoe UI"
                      Background="{DynamicResource ThemeBrushKey}"
					  IsRestoringWindowPlacement="True"
					  UseLayoutRounding="True"
					  TextOptions.TextFormattingMode="Display"
                      Loaded="Window_Loaded"
                      SizeChanged="Window_SizeChanged">
    <chrome:WindowChrome.Instance>
        <chrome:WindowChrome>
            <chrome:WindowChrome.Top>
                <Border Background="{DynamicResource AccentBrushKey}"
                        Padding="24,3"
                        Margin="8,0"
                        HorizontalAlignment="Right">
                    <TextBlock Text="Reseacher Aurora" Foreground="White" />
                </Border>
            </chrome:WindowChrome.Top>
        </chrome:WindowChrome>
    </chrome:WindowChrome.Instance>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="25" />
            <RowDefinition Height="0" x:Name="margin" />
        </Grid.RowDefinitions>

        <!-- caption bar area -->
        <Border Grid.Row="0" controls:MetroWindow.IsCaptionBar="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <controls:CaptionIcon Grid.Column="0" Margin="2,0,0,0">
                    <Grid>
                        <Ellipse Width="15"	Height="15" Fill="{DynamicResource ActiveForegroundBrushKey}" />
                    </Grid>
                </controls:CaptionIcon>
                <local:Menus Grid.Column="2" WindowChrome.IsHitTestVisibleInChrome="True"/>
                <controls:SystemButtons Grid.Column="4" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0"/>
            </Grid>
        </Border>

        <!-- menu bar area -->
        <local:ThemeControl Grid.Row="1"/>

        <!-- content area -->
        <local:MainControl x:Name="dragablzControl" Grid.Row="2" />

        <!-- under bar area -->
        <Grid Grid.Row="3" Background="{DynamicResource AccentBrushKey}"/>
    </Grid>
</controls:MetroWindow>