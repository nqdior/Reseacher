<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:cp="clr-namespace:MetroRadiance.Chrome.Primitives">

	<Style TargetType="{x:Type cp:ChromeWindow}">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type cp:ChromeWindow}">
					<ContentPresenter LayoutTransform="{TemplateBinding DpiScaleTransform}" />
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
